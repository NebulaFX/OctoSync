<Window x:Class="OctoSync.UpdateStoreCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OctoSync"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="Enter A Store Code" Height="250" Width="300">
    <Grid>
        <Label Content="Please Enter A Store Code" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Grid.RowSpan="2" VerticalAlignment="Center" Grid.Row="1" Height="50" VerticalContentAlignment="Center" FontSize="32" HorizontalContentAlignment="Center" x:Name="textboxentry" MaxLength="4"/>
        <Button Grid.Row="3" Content="Save" Click="save"/>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
